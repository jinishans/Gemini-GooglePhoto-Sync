{
  "name": "gemini-smart-photo-sync",
  "version": "1.0.2",
  "description": "AI-Powered Photo Sync & Gallery",
  "main": "electron/main.js",
  "author": "Your Name",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder build --win",
    "docker:build": "docker build -t gemini-photo-sync .",
    "service:install": "node service/install.js",
    "service:start": "node service/index.js"
  },
  "dependencies": {
    "@google/genai": "*",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "lucide-react": "^0.378.0",
    "node-windows": "^1.0.0-beta.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gemini.photosync",
    "productName": "Gemini Smart Photo Sync",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    }
  }
}