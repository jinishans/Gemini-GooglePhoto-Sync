{
  "name": "gemini-smart-photo-sync",
  "version": "1.0.0",
  "description": "AI-Powered Photo Sync & Gallery",
  "main": "electron/main.js",
  "author": "Your Name",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder build --win",
    "docker:build": "docker build -t gemini-photo-sync .",
    "docker:run": "docker run -p 3000:3000 gemini-photo-sync",
    "docker:build:windows": "docker build -f Dockerfile.windows -t gemini-photo-sync-win .",
    "docker:compose:windows": "docker-compose -f docker-compose.windows.yml up -d",
    "service:install": "node service/install.js",
    "service:uninstall": "node service/uninstall.js",
    "service:start": "node service/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.294.0",
    "node-windows": "^1.0.0-beta.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gemini.photosync",
    "productName": "Gemini Smart Photo Sync",
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}